<h1> Register </h1>

<% if @users.errors.any? %>
<ol>
    <% @users.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
        <% end %>
    </ol>
<% end %>

<%= form_for new_user_path do |f|%> <!--if @user faults out use User.new-->
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit "Sign up" %>
<% end %>