<h1> <%= @trainer.name %> </h1>

        <div class="container">
            <div class="row">

                <div class="col">
                    <%= image_tag @trainer.image, :class => "trainer" if @trainer.image.present? %>
                    <ul class="row">
                        <li> Speciality: <%= @trainer.speciality %> </li>
                    </ul>
                </div>
                    
            </div>
        </div>

            <!--Here is where i want to have a drop down menu where you can select from a date and time -->

        <!-- Add an if statement here , if a trainer is logged in show the controls for a trainer else dont show them -->
            <div class="controls">
                <% if @current_trainer.present? %>
                    <%= link_to "Edit Trainer", edit_trainer_path(@trainer)%>
                    |
                    <%= link_to "Delete Trainer", @trainer, :method => 'delete', :data => { :comfirmation => "Are you sure? " } %>
                    <% else %>
                    <ul>
                        <li> Generate a random quote </li>
                    </ul>
            <% end %>
        </div>
        
            
  





