

<div class="trainersContainer">
<h1> All Trainers </h1>

<% @trainers.each do |trainer|  %> <!-- Loops through all trainers | and for every trainer, execute ? or rather everything within this loop can be treated as an individual trainer-->
    <h1> <%= trainer.name %> </h1>

    <%= link_to image_tag(trainer.image, :class => "trainer"), trainer if trainer.image.present? %>
        <ul>
            <li> Speciality: <%= trainer.speciality %> </li>
        </ul>

            
        <!-- Add an if statement here , if a trainer is logged in show the controls for a trainer else dont show them -->
        <div class="controls">
            <%= link_to "Edit Trainer", edit_trainer_path(trainer)%>
            |
            <%= link_to "Delete Trainer", trainer, :method => 'delete', :data => { :comfirmation => "Are you sure? " }%>
        </div>
    <% end %>
    </div>





